<% include ./partials/header %>

<div class="container">
	<div class="form-container">
		<h4>Forgot Password</h4>
		<form action="/verify/password_update" method="POST" id="update_password">
			<div>
				<input type="password" name="password" placeholder="Enter new password" id="password">
			</div>
			<div>
				<input type="password" name="password_match" placeholder="Re-enter new password">
			</div>
			<input type="hidden" name="id" value="<%=targetUser._id%>">
			<div>
				<button class="btn-submit">Submit</button>
			</div>
		</form>
	</div>
</div>

<% include ./partials/footer %>